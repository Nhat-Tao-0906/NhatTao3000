@{
    WebBanHangContext db = new WebBanHangContext();
    int id = Model.IDCus;
    var rs = from l in db.Bill where l.IDCus == id select l;
}

<style>
    form .btn{
        width: unset;
    }

    .btn-close {
        background-color: #d72f2f!important;
    }

    .btn-edit {
        background-color: #2d37f1!important;
    }

